<section class="section-8">
<div class="page-width">
   <div class="heading">
      <h3 class="sub_heading">{{ section.settings.sub_head }}</h3>
      <h2 class="head">{{ section.settings.heading }}</h2>
      <p class="description_inner">{{ section.settings.description }}</p>
    </div>

      
<div class="section-8-blocks">
      {% for block in section.blocks%}
        <div class="section-8-block-inner">
          <div class ="section-8-inner-image">
             {% if block.settings.img_1 != blank %}
             <img src="{{ block.settings.img_1 | img_url: "master" }}">
              {% endif %}
          </div>
    <div class="section-8-concept">
      <h3>{{ block.settings.con_head }}</h3>
      <li>{{ block.settings.description1}}</li>
      <li>{{ block.settings.description2}}</li>
      <h2>{{ block.settings.price }}</h2>
      <a class="btn_1" href="">{{ block.settings.btn_1 }}</a>
    </div>
          
        </div>
        {% endfor %}
    </div>
</div>
</section>



<style>
  .section-8{
    padding-top:{{ section.settings.padding }}px;
  }
</style>


