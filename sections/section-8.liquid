    "name": "section-8",
    "settings": [
       {
      "type": "range",
      "id": "padding",
      "label": "Padding top",
         "min": 90,
          "max": 190,
          "step": 1,
          "unit": "px",
          "default": 90
    },
     {
      "type": "text",
      "id": "sub_head",
      "label": "Sub heading"
    },
     {
      "type": "text",
      "id": "heading",
      "label": "heading"
    },
     {
      "type": "text",
      "id": "description",
      "label": "pro-description"
    }  
    ],
     "blocks": [
     {
       "name": "Image With Block",
       "type": "slide",
       "settings": [
       {
          "type": "image_picker",
          "id": "img_1",
          "label": "Enter Image"
        },
         {
          "type": "text",
          "id": "con_head",
          "label": "Heading"
        },
         {
          "type": "text",
          "id": "description1",
          "label": "Enter list"
        },
         {
          "type": "text",
          "id": "description2",
          "label": "Enter list"
        },
         {
          "type": "text",
          "id": "price",
          "label": "enter Price"
        },
         {
      "type": "text",
      "id": "btn_1",
      "label": "Enter Button Name"
    }
         
       ]
     }
  ],
    "presets": [
      {
        "name": "section-8"
      }
    ]
  }
