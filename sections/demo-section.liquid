<div class="demo-section">
  <div class= "page-width">
<div class="demo-section-inner">
  <h3>{{ section.settings.sub_head }}</h3>
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.description }}</p>
</div>    
  
    <div class="demo-section-blocks">
      {% for block in section.blocks %}
        <div class="demo-section-block-inner">
          <div class ="demo-section-inner-image">
            {% if block.settings.img_1 != blank %}
             <img src="{{ block.settings.img_1 | img_url: "master" }}">
              {% endif %}
          </div>
          <div class="demo-section-concept">
      <h3>{{ block.settings.con_head }}</h3>
      <p>{{ block.settings.description1}}</p>
    </div>
        </div>
    
        {% endfor %}
    </div>
  </div>





{% schema %}
{
  "name": "demo-section",
  "settings": [
    {
      "type": "text",
      "id": "sub_head",
      "label": "Sub heading"
    },
     {
      "type": "text",
      "id": "heading",
      "label": "heading"
    },
     {
      "type": "text",
      "id": "description",
      "label": "pro-description"
    },
     {
      "type": "text",
      "id": "sub_head2",
      "label": "sub-heading"
    },
     {
      "type": "text",
      "id": "heading2",
      "label": "heading1"
    },
    {
      "type": "text",
      "id": "description2",
      "label": "enter-description"
    }
  ],

  
  "blocks": [
     {
       "name": "Image With Block",
       "type": "slide",
       "settings": [
       {
          "type": "image_picker",
          "id": "img_1",
          "label": "Enter Image"
        },
         {
          "type": "text",
          "id": "con_head",
          "label": "Heading"
        },
         {
          "type": "text",
          "id": "description1",
          "label": "Enter description"
        }
       ]
     }
  ],
  "presets": [
    {
      "name": "demo-section"
    }
  ]
}
{% endschema %}