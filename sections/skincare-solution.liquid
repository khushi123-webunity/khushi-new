<section class="skincare-solution">
<div class="page-width">
   <div class="skincare-blocks">
      {% for block in section.blocks%}
        <div class="skincare-block-inner">
          <div class ="skincare-inner-image">
             {% if block.settings.img_1 != blank %}
             <img src="{{ block.settings.img_1 | img_url: "master" }}">
              {% endif %}
          </div>
          <div class="skincare-concept">
            <h3>{{ block.settings.con_head }}</h3>
            <p>{{ block.settings.description1}}</p>      
          </div>    
        </div>
        {% endfor %}
    </div>    

  
 
</div>     

</section>


<style>
  .skincare-solution{
    padding-top:{{ section.settings.padding }}px;
  }
</style>


{% schema %}
  {
    "name": "skincare-solution",
    "settings": [
{
      "type": "range",
      "id": "padding",
      "label": "Padding top",
         "min": 90,
          "max": 190,
          "step": 1,
          "unit": "px",
          "default": 90
    }
      
      
    ],
     "blocks": [       
     {
       "name": "title",
       "type": "slide",
       "settings": [
       {
          "type": "image_picker",
          "id": "img_1",
          "label": "Enter Image"
        },
         
         {
          "type": "text",
          "id": "con_head",
          "label": "Heading"
        },
         {
          "type": "richtext",
          "id": "description1",
          "label": "Enter description"
        }
        
       ]
     }
     ],

    "presets": [
      {
        "name": "skincare-solution"
      }
    ]
  
  }
{% endschema %}

