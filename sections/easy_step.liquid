<section class= "easy_step">
<div class="page-width">
  <div class="heading">
  <h3 class="sub_heading">{{ section.settings.sub_head }}</h3>
  <h2 class="head">{{ section.settings.heading }}</h2>
  <p class="description_inner">{{ section.settings.description }}</p>
    </div>


<div class="easy-step-blocks">
      {% for block in section.blocks%}
        <div class="easy-step-block-inner">
          <div class ="easy-step-inner-image">
             {% if block.settings.img_1 != blank %}
             <img src="{{ block.settings.img_1 | img_url: "master" }}">
              {% endif %}
          </div>
          
          <div class ="easy-step-number-image">
             {% if block.settings.img_2 != blank %}
             <img src="{{ block.settings.img_2 | img_url: "master" }}">
              {% endif %}
          </div>
        
    <div class="easy-concept-concept">
      <h3>{{ block.settings.con_head }}</h3>
      <p>{{ block.settings.description1}}</p>
     
    </div>    
        </div>
        {% endfor %}
    </div>  
  
</div>
</section>




<style>
  .easy_step{
    padding-top:{{ section.settings.padding }}px;
  }
</style>


{% schema %}
  {
    "name": "easy_step",
    "settings": [
      {
      "type": "range",
      "id": "padding",
      "label": "Padding top",
         "min": 90,
          "max": 190,
          "step": 1,
          "unit": "px",
          "default": 90
    },
      {
      "type": "text",
      "id": "sub_head",
      "label": "Sub heading"
    },
       
     {
      "type": "text",
      "id": "heading",
      "label": "heading"
    },
     {
      "type": "text",
      "id": "description",
      "label": "pro-description"
    }
    ],
 "blocks": [
     {
       "name": "Image With Block",
       "type": "slide",
       "settings": [
       {
          "type": "image_picker",
          "id": "img_1",
          "label": "Enter Image"
        },
         {
          "type": "image_picker",
          "id": "img_2",
          "label": "Enter Image"
        },
         {
          "type": "text",
          "id": "con_head",
          "label": "Heading"
        },
         {
          "type": "text",
          "id": "description1",
          "label": "Enter description"
        }
       ]
     }
  ],
    
    "presets": [
      {
        "name": "easy_step"
      }
    ]
  
  }
{% endschema %}

