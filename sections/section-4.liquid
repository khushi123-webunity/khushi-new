<section class="section-4">
  <div class="page-width">
    <div class="heading">
       <h3 class="sub_heading aos-init aos-animate" data-aos="zoom-in" data-aos-duration="1000">{{ section.settings.sub_head }}</h3>
       <h2 class="head">{{ section.settings.heading }}</h2>
       <p class="description_inner">{{ section.settings.description }}</p>
    </div>

    <div class="section-4-blocks">
      {% for block in section.blocks%}
        <div class="section-4-block-inner">
          <div class ="section-4-inner-image aos-init aos-animate" data-aos="flip-up" data-aos-duration="1500">
             {% if block.settings.img_1 != blank %}
             <img src="{{ block.settings.img_1 | img_url: "master" }}">
              {% endif %}
          </div>
    <div class="section-4-concept">
      <h3>{{ block.settings.con_head }}</h3>
      <p>{{ block.settings.description1}}</p>
    </div>     
      </div>
        {% endfor %}
    </div>
  </div>
</section>
<script>
AOS.init({
  duration: 1000
});
</script>

<style>
  .section-4{
    padding-top:{{ section.settings.padding }}px;
  }
</style>









{% schema %}
  
  {
    "name": "section-4",
    "settings": [
      {
      "type": "range",
      "id": "padding",
      "label": "Padding top",
         "min": 90,
          "max": 190,
          "step": 1,
          "unit": "px",
          "default": 90
    },
     {
      "type": "text",
      "id": "sub_head",
      "label": "Sub heading"
    },
     {
      "type": "text",
      "id": "heading",
      "label": "heading"
    },
     {
      "type": "text",
      "id": "description",
      "label": "pro-description"
    }
    ],
    "blocks": [
     {
       "name": "Image With Block",
       "type": "slide",
       "settings": [
       {
          "type": "image_picker",
          "id": "img_1",
          "label": "Enter Image"
        },
         {
          "type": "text",
          "id": "con_head",
          "label": "Heading"
        },
         {
          "type": "text",
          "id": "description1",
          "label": "Enter description"
        }
       ]
     }
  ],
     "presets": [
      {
        "name": "section-4"
      }
    ]   
  }
{% endschema %}

